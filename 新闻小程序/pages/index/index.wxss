.swiper{
  width: 100%;
  height: 420rpx;
}
swiper image{
  width: 100%;
  height: 420rpx;
}

.menu-list{
  display: flex;
  margin-top: 28rpx;
}
.menu-item{
  flex-shrink: 0;
  width: 120rpx;
  font-size: 36rpx;
  line-height: 42rpx;
  padding-bottom: 28rpx;
  opacity: 0.8;
}
.selected{
  color: red;
}

 .news-list{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: white;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  padding-bottom: 5rpx;
  padding-top: 10rpx;
}
.news-head{
  margin: 10rpx 0 20rpx 10rpx;
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5rpx;
  font-size: 24rpx;
  opacity: 0.6;
}
.news-date{
  margin-left: 10rpx;
}
.news-title{
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.news-image{
  margin-left: 16rpx;
  margin-bottom: 15rpx;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
}
.news-content{
  color: #666;
  font-size: 28rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.news-like{
  font-size: 24rpx;
  flex-direction: row;
  line-height: 16rpx;
  margin-left: 10rpx;
}
.news-like-icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
  vertical-align: middle;
  opacity: 0.8
}
.news-like-text{
  vertical-align: middle;
  margin-right: 20rpx;
}